<%= partial "includes/header" %>

<%= partial "includes/nav" %>

<section class="wrap title">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <img class="img-thumbnail img-main" src="/images/logos/<%= organization.url_title %>-logo-card.jpg" alt="<%= organization.name %> logo">
      </div>
      <div class="col-md-6">
        <h1 class="text-md-left mt-md-4"><%= dato.static_content.backs_hate_header %></h1>
      </div>
    </div>
    <div class="row justify-content-center py-4 mt-md-4">
      <div class="hidden-sm-down col-md-2 sideline"></div>
      <div class="col-12 col-md-8">
        <h2 class="font-italic"><%= organization.summary %></h2>
      </div>
      <div class="hidden-sm-down col-md-2 sideline"></div>
    </div>
  </div>
</section>

<section class="wrap">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1><%= dato.static_content.administration_ties_header_text %></h1>
      </div>
      <div class="col-12 mt-4">
        <div class="row evidence-wrapper">
          <% get_fields(organization, "ties").times do |e| %>
            <% unless organization.send("ties_#{e+1}").blank? %>
              <div class="col-md item"><p class="evidence"><%= organization.send("ties_#{e+1}") %></p></div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<%= partial "includes/cta_section" %>

<section class="wrap bg-grade-lightgray">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1 class="profit-model-title"><%= dato.static_content.profiting_from_agenda_header_text %></h1>
        <div class="row justify-content-center">
          <div class="hidden-md-down col-lg-2 sideline"></div>
          <div class="col-12 col-lg-8">
            <p class="text-justify"><%= organization.profit %></p>
          </div>
          <div class="hidden-md-down col-lg-2 sideline"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="wrap bg-grade-darkgray" id="email">
  <div class="container">
    <div class="row underline">
      <div class="col-12 col-lg-6">
        <h1 class="ellipsis"><%= dato.static_content.demands_header_text %></h1>
      </div>
      <div class="col-12 col-lg-6">
        <ol>
          <% get_fields(organization, "demands").times do |e| %>
            <% unless organization.send("demands_#{e+1}").nil? %>
              <li><p><%= organization.send("demands_#{e+1}") %></p></li>
            <% end %>
          <% end %>
        </ol>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div id='embedForm' data-submit="<%= current_page.data.submitText %>" data-comment="<%= current_page.data.commentText %>" style='width: 100%'></div>
      </div>
    </div>
  </div>
</section>

<section class="wrap bg-grade-lightgray">
  <div class="container">
    <div class="row text-center text-sm-left">
      <div class="col-12 col-md-12">
        <h1>CEO: <%= organization.ceo %></h1>
        <a href=<%= organization.corporate_profile.nil? ? "#" : organization.corporate_profile.url %> class="btn btn-outline-dark">Full Corporate Profile</a>
      </div>
    </div>
  </div>
</section>

<section class="wrap">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1>Board of Directors</h1>
        <div class="row">
        <% data.companies[0].board.each_with_index do |b,i| %>
          <div class="col-sm-6 col-lg-3">
            <h2 class="name"><%= b.name %></h2>
            <p class="font-small-lg"><%= b.position %></p>
          </div>
          <% if (i + 1) % 4 == 0 %>
        </div>
        <div class="row">
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<%= partial "includes/cta_section" %>

<%= partial "includes/social", locals: { url: "http://www.backersofhate.org.s3-website-us-east-1.amazonaws.com/en/goldman-sachs.html", facebook_share_text: "Hate the haters!", twitter_share_text: "", twitter_handle: "" } %>

<section class="wrap">
  <div class="container">
    <div id="next-block" class="row">
      <div class="col-12">
        <h1 class="text-center">Who's Next?</h1>
        <div class="row">
          <div class="col-6">
            <img class="img-thumbnail img-nav" src="/images/logos/<%= data.companies[8].logo %>" alt="<%= data.companies[8].name %> logo">
          </div>
          <div class="col-6">
            <img class="img-thumbnail img-nav" src="/images/logos/<%= data.companies[1].logo %>" alt="<%= data.companies[1].name %> logo">
          </div>
        </div>
      </div>
    </div>
  </div>
</section> <!-- /container -->

<%= partial "includes/footer" %>

<script src='<%= current_page.data.canURL %>?format=js&source=widget&can_widget_id=embedForm'></script>
